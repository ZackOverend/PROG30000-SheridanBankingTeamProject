@model SheridanBankingTeamProject.Models.Entities.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Goals</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid mt-4">
        <h1 class="text-center mb-4">User Goals</h1>
        <div class="table-responsive">
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Add New Goal</th>
                    </tr>
                </thead>
  
                <tbody>
                    <tr>
                        <td class="fw-bold">@Model.Name</td>
                        <td>
                            <form method="post" asp-action="AddGoal" asp-controller="Home" class="d-flex gap-2 mb-2">
                                <input type="hidden" name="userId" value="@Model.Id" />
                                <input type="text" class="form-control" name="newGoal" placeholder="Enter new goal" required />
                                <button type="submit" class="btn btn-success">Add Goal</button>
                            </form>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <h6>Goals:</h6>
                            <ul class="list-unstyled mb-0">
                            @if (Model.Goals != null && Model.Goals.Any()) {
                            foreach (var goal in Model.Goals)
                            {
                            @if (goal != null) {
                                <li class="mb-2 d-flex justify-content-between align-items-center">
                                    <span style="font-size: x-large;" class="badge bg-primary">@goal</span>
                                    <form method="post" asp-action="DeleteGoal" asp-controller="Home" class="d-inline-block">
                                        <input type="hidden" name="userId" value="@Model.Id" />
                                        <input type="hidden" name="goal" value="@goal" />
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </li>
                            }
                        }
                        } else {
                        <li class="mb-2">No Goals Yet Add One!</li>
                        }
                            </ul>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    
</body>
</html>